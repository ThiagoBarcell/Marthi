{$R *.fmx}

{ TTecladoVirtualfrm }

procedure TTecladoVirtualfrm.KeyClick(Sender: TObject);
var
  ActiveEdit: TEdit;
  Rectangle: TRectangle;
  LabelResource: TLabel;
begin
  if Tag <> 0 then
  begin
    ActiveEdit := TEdit(Tag);
    if Sender is TRectangle then
    begin
      Rectangle := Sender as TRectangle;

      // Tenta encontrar o TLabel dentro do TRectangle
      LabelResource := TLabel(Rectangle.FindStyleResource('lbl'));
      if Assigned(LabelResource) then
      begin
        if LabelResource.Text <> '' then
          ActiveEdit.Text := ActiveEdit.Text + LabelResource.Text
        else
          ShowMessage('Texto do Label est· vazio.');
      end
      else
        ShowMessage('Recurso de estilo "lbl" n„o encontrado.');
    end;
  end;
end;

procedure TTecladoVirtualfrm.KeyQClick(Sender: TObject);
begin
  KeyClick(Sender);
end;

end.
